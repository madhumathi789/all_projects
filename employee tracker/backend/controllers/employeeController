const Employee = require("../models/Employee");
const { calculateExperienceAndAge } = require("../utils/calculateExperience");

const createEmployee = async (req, res) => {
  try {
    const data = req.body;
    if (req.file) data.photo = req.file.filename;

    const calculatedData = calculateExperienceAndAge(data);
    const newEmp = new Employee(calculatedData);
    await newEmp.save();

    res.status(201).json({ message: "Employee created", employee: newEmp });
  } catch (err) {
    res.status(500).json({ message: "Creation failed", error: err.message });
  }
};

const updateEmployee = async (req, res) => {
  try {
    const data = req.body;
    if (req.file) data.photo = req.file.filename;

    const calculatedData = calculateExperienceAndAge(data);
    const updated = await Employee.findByIdAndUpdate(req.params.id, calculatedData, { new: true });

    res.json({ message: "Employee updated", employee: updated });
  } catch (err) {
    res.status(500).json({ message: "Update failed", error: err.message });
  }
};

const getEmployees = async (req, res) => {
  try {
    const employees = await Employee.find();
    const enriched = employees.map(emp => calculateExperienceAndAge(emp._doc));
    res.json(enriched);
  } catch (err) {
    res.status(500).json({ message: "Fetching failed", error: err.message });
  }
};

const getEmployeeById = async (req, res) => {
  try {
    const emp = await Employee.findById(req.params.id);
    if (!emp) return res.status(404).json({ message: "Not found" });

    const enriched = calculateExperienceAndAge(emp._doc);
    res.json(enriched);
  } catch (err) {
    res.status(500).json({ message: "Error", error: err.message });
  }
};

const deleteEmployee = async (req, res) => {
  try {
    await Employee.findByIdAndDelete(req.params.id);
    res.json({ message: "Employee deleted" });
  } catch (err) {
    res.status(500).json({ message: "Delete failed", error: err.message });
  }
};

module.exports = {
  createEmployee,
  getEmployees,
  getEmployeeById,
  updateEmployee,
  deleteEmployee
};
